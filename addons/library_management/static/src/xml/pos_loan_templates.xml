<templates id="pos_loan_templates" xml:space="preserve">
    <t t-name="LoanReceipt">
        <div class="loan-receipt">
            <h3>COMPROBANTE DE PRÉSTAMO</h3>
            <p>Socio: <t t-esc="props.order.get_partner() ? props.order.get_partner().name : 'Cliente ocasional'"/></p>
            <table>
                <tr>
                    <th>Libro</th>
                    <th>Fecha Devolución</th>
                </tr>
                <t t-foreach="loans" t-as="loan">
                    <tr>
                        <td><t t-esc="loan.book_id[1]"/></td>
                        <td><t t-esc="loan.due_date"/></td>
                    </tr>
                </t>
            </table>
            <p class="notice">* Multa por retraso: $10 por día</p>
        </div>
    </t>
</templates>