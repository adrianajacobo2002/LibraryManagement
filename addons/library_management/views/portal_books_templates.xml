<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="portal_available_books" name="Libros Disponibles">
        <t t-call="portal.portal_layout">
            <div class="container mt-4">
                <h2><i class="fa fa-book text-primary"></i> Libros Disponibles</h2>
                <t t-if="not books">
                    <div class="alert alert-info mt-3">
                        <i class="fa fa-info-circle"></i> No hay libros disponibles por el momento. </div>
                </t>
                <div class="row" t-if="books">
                    <t t-foreach="books" t-as="book">
                        <div class="col-md-4 mb-4">
                            <div class="card h-100 shadow-sm">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <t t-esc="book.name" />
                                    </h5>
                                    <p class="card-text">
                                        <strong>Autor:</strong>
                                        <t t-esc="book.author" />
                                    </p>
                                    <p class="card-text">
                                        <strong>Publicado:</strong>
                                        <t t-esc="book.publication_date" />
                                    </p>
                                </div>
                            </div>
                        </div>
                    </t>
                </div>
            </div>
        </t>
    </template>
    <template id="portal_my_home_books_link" inherit_id="portal.portal_my_home"
        name="Enlace Libros Disponibles">
        <xpath expr="//div[@class='o_portal_my_home']" position="inside">
            <div class="col-12 col-md-6 col-lg-4 mb-4">
                <a href="/my/books" class="text-decoration-none">
                    <div class="card h-100 shadow-sm border-0 rounded-lg">
                        <div
                            class="card-body d-flex flex-column align-items-start justify-content-center p-4">
                            <div class="mb-2">
                                <i class="fa fa-book-open fa-2x text-success"></i>
                            </div>
                            <h5 class="card-title mb-1 text-dark font-weight-bold">Libros
                                Disponibles</h5>
                            <p class="card-text text-muted">Consulta los libros que puedes solicitar
                                en pr√©stamo.</p>
                        </div>
                    </div>
                </a>
            </div>
        </xpath>
    </template>
</odoo>